{
  "name": "protractor-style-guide",
  "version": "2.0.1",
  "description": "Automation style guide using protractor and protractor-helper",
  "main": "index.js",
  "scripts": {
    "remove-report": "run-script-os",
    "remove-report:win32": "if exist allure-report rmdir allure-report /s /q",
    "remove-report:linux": "rm -f allure-report",
    "pretest": "webdriver-manager update --gecko false && npm run remove-report",
    "test": "protractor",
    "posttest": "allure generate allure-results --clean -o allure-report || true",
    "open-report": "allure serve",
    "prettify": "prettier --write **/*.js  **/*.json"
  },
  "pre-commit": [
    "prettify"
  ],
  "keywords": [
    "protractor",
    "protractor-helper",
    "e2e",
    "style-guide"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PauloGoncalvesBH/protractor-style-guide.git"
  },
  "author": "Paulo Henrique Rocha Gon√ßalves <paulorochag@hotmail.com> (https://linkedin.com/in/paulo-goncalves)",
  "license": "MIT",
  "devDependencies": {
    "allure-commandline": "^2.9.0",
    "jasmine-allure-reporter": "^1.0.2",
    "jasmine-spec-reporter": "^4.2.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.16.4",
    "protractor": "^5.4.2",
    "protractor-helper": "^3.7.8",
    "run-script-os": "^1.0.5"
  }
}

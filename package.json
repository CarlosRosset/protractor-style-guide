{
  "name": "protractor-style-guide",
  "version": "1.0.0",
  "description": "Guia de estilo de automação utilizando o Protractor",
  "main": "index.js",
  "scripts": {
    "pretest": "webdriver-manager update && if exist allure-report rmdir allure-report /s /q",
    "test": "protractor",
    "posttest": "allure generate allure-results --clean -o allure-report || true",
    "report": "allure serve",
    "prettify": "prettier --write *.js page_objects/*.js specs/*.js"
  },
  "pre-commit": [
    "prettify"
  ],
  "keywords": [
    "protractor",
    "e2e"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PauloGoncalvesBH/protractor-exemplo.git"
  },
  "author": "Paulo Henrique Rocha Gonçalves <paulorochag@hotmail.com>",
  "license": "ISC",
  "dependencies": {
    "jasmine-allure-reporter": "^1.0.2",
    "jasmine-spec-reporter": "^4.2.1",
    "protractor": "^5.4.1",
    "protractor-helper": "^3.6.13",
    "shortid": "^2.2.14",
    "allure-commandline": "^2.8.1"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.2"
  }
}
